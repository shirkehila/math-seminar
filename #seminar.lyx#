\begin_layout Definition
לכל 
\begin_inset Formula $f\in\mathbb{F}_{2}\left[x\right]$
\end_inset

 נגדיר את המיפויים הבאים:
\end_layout

\begin_layout Itemize
\begin_inset Formula $T_{1}\left(f\right)=\left(x+1\right)f+1$
\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $T_{2}\left(f\right)=\frac{f}{x^{r}}$
\end_inset

 כאשר 
\begin_inset Formula $r$
\end_inset

 החזקה המקסימלית של 
\begin_inset Formula $x$
\end_inset

 המחלקת את 
\begin_inset Formula $f$
\end_inset

 עבור 
\begin_inset Formula $f\ne0$
\end_inset

 ונגדיר גם 
\begin_inset Formula $T_{2}\left(0\right)=0$
\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $T_{3}\left(f\right)=\left(T_{2}\circ T_{1}\right)\left(f\right)$
\end_inset


\end_layout

\begin_layout Standard
לכל 
\begin_inset Formula $f\in\mathbb{F}_{2}\left[x\right]$
\end_inset

 אי זוגי, הסדרה 
\begin_inset Formula $\left(T_{3}^{n}\left(f\right)\right)_{n\ge0}$
\end_inset

 מהווה תת סדרה של 
\begin_inset Formula $\left(T^{n}\left(f\right)\right)_{n\ge0}$
\end_inset

 שכן עבור 
\begin_inset Formula $f$
\end_inset

 אי זוגי הפעלה יחידה של 
\begin_inset Formula $T_{3}$
\end_inset

 שקולה להפעלה חוזרת של 
\begin_inset Formula $T$
\end_inset

 עד להגעה לפולינום אי זוגי )שאינו 
\begin_inset Formula $f$
\end_inset

 עצמו(.
\end_layout

\begin_layout Lemma
יהי 
\begin_inset Formula $f\in\mathbb{F}_{2}\left[x\right]$
\end_inset

 אי זוגי.
 
\begin_inset Formula $t_{\min}\left(f,T\right)=2t_{\min}\left(f,T_{3}\right)+\deg\left(f\right)$
\end_inset

 )בפרט 
\begin_inset Formula $t_{\min}\left(f,T_{3}\right)$
\end_inset

 סופי(
\end_layout

\begin_layout Proof
נוכיח את הטענה באינדוקציה שלמה על מעלת הפולינום 
\begin_inset Formula $f$
\end_inset

.
 אם 
\begin_inset Formula $\deg f=0$
\end_inset

 אז 
\begin_inset Formula $f\left(x\right)=1$
\end_inset

, 
\begin_inset Formula $t_{\min}\left(f,T\right)=0$
\end_inset

 וכן 
\begin_inset Formula $t_{\min}\left(f,T_{3}\right)=0$
\end_inset

 ולכן השוויון נכון.
\end_layout

\begin_layout Proof
נניח שהטענה נכונה לפולינומים אי זוגיים ממעלה קטנה מ
\begin_inset Formula $n$
\end_inset

 ונוכיח אותה לפולינומים אי זוגיים ממעלה 
\begin_inset Formula $n$
\end_inset

.
 ב
\begin_inset CommandInset ref
LatexCommand ref
reference "lem:יהי--כך"
plural "false"
caps "false"
noprefix "false"

\end_inset

 הוכחנו כי עבור 
\begin_inset Formula $f$
\end_inset

 אי זוגי, הנתון בצורה:
\begin_inset Formula 
\begin{eqnarray*}
f & = & x^{r}g+1
\end{eqnarray*}

\end_inset

כאשר 
\begin_inset Formula $1\le r\le d$
\end_inset

 החזקה המקסימלית של 
\begin_inset Formula $x$
\end_inset

 המחלקת את 
\begin_inset Formula $f-1$
\end_inset

, מתקיים כי לכל 
\begin_inset Formula $1\le j\le r$
\end_inset

:
\begin_inset Formula 
\begin{eqnarray*}
T^{2j}\left(f\right) & = & \left(x+1\right)^{j}x^{r-j}g+1
\end{eqnarray*}

\end_inset

בפרט עבור 
\begin_inset Formula $j=r-1$
\end_inset

:
\begin_inset Formula 
\begin{eqnarray*}
T^{2\left(r-1\right)}\left(f\right) & = & \left(x+1\right)^{r-1}xg+1
\end{eqnarray*}

\end_inset

נשים לב כי מההוכחה ב
\begin_inset CommandInset ref
LatexCommand ref
reference "lem:יהי--כך"
plural "false"
caps "false"
noprefix "false"

\end_inset

 נובע כי 
\begin_inset Formula $2\left(r-1\right)$
\end_inset

 ההפעלות של 
\begin_inset Formula $T$
\end_inset

 הן לסירוגין מסוג 
\begin_inset Formula $f\mapsto\left(x+1\right)f+1$
\end_inset

 ומסוג 
\begin_inset Formula $f\mapsto\frac{f}{x}$
\end_inset

 כלומר מתחלקות לזוגות של הפעלות שכל אחת מהן שקולה להפעלה אחת של 
\begin_inset Formula $T_{3}$
\end_inset

 ולכן:
\begin_inset Formula 
\begin{eqnarray*}
T_{3}^{r-1}\left(f\right) & = & \left(x+1\right)^{r-1}xg+1
\end{eqnarray*}

\end_inset

נסמן 
\begin_inset Formula $h\left(x\right)=\left(x+1\right)^{r-1}xg+1$
\end_inset

.
 
\begin_inset Formula 
\begin{eqnarray*}
T\left(h\right) & = & \left(x+1\right)^{r}xg+x
\end{eqnarray*}

\end_inset

תהי כעת 
\begin_inset Formula $s$
\end_inset

 החזקה המקסימלית של 
\begin_inset Formula $x$
\end_inset

 המחלקת את 
\begin_inset Formula $T\left(h\right)$
\end_inset

, אז 
\begin_inset Formula 
\begin{eqnarray*}
T^{s}\left(T\left(h\right)\right) & = & T_{2}\left(T\left(h\right)\right)
\end{eqnarray*}

\end_inset

מצד שני מהגדרת 
\begin_inset Formula $T_{3}$
\end_inset

:
\begin_inset Formula 
\begin{eqnarray*}
T_{3}\left(h\right) & = & T_{2}\left(T_{1}\left(h\right)\right)=T_{2}\left(T\left(h\right)\right)
\end{eqnarray*}

\end_inset

קיבלנו:
\begin_inset Formula 
\begin{eqnarray}
f\overbrace{\to}^{T^{2\left(r-1\right)}}h\overbrace{\to}^{T^{1+s}}T_{2}\left(T\left(h\right)\right) &  & T^{2\left(r-1\right)+1+s}\left(f\right)=T_{2}\left(T\left(h\right)\right)\label{eq:1}\\
f\overbrace{\to}^{T_{3}^{r-1}}h\overbrace{\to}^{T_{3}}T_{2}\left(T\left(h\right)\right) &  & T_{3}^{r}\left(f\right)=T_{2}\left(T\left(h\right)\right)\label{eq:2}
\end{eqnarray}

\end_inset

הפולינום 
\begin_inset Formula $T_{2}\left(T\left(h\right)\right)$
\end_inset

 הוא אי זוגי.
 
\begin_inset Formula $T\left(h\right)$
\end_inset

 ממעלה 
\begin_inset Formula $n+1$
\end_inset

 ולכן 
\begin_inset Formula $T_{2}\left(T\left(h\right)\right)$
\end_inset

 ממעלה 
\begin_inset Formula $n+1-s$
\end_inset

.
 נזכיר כי מ
\begin_inset CommandInset ref
LatexCommand ref
reference "lem:יהי--כך"
plural "false"
caps "false"
noprefix "false"

\end_inset

 נובע כי 
\begin_inset Formula $T^{2}\left(h\right)=T^{2r}\left(f\right)$
\end_inset

 זוגי כלומר 
\begin_inset Formula $s\ge2$
\end_inset

 ולכן 
\begin_inset Formula $n+1-s<n$
\end_inset

 ואם כך מהנחת האינדוקציה:
\begin_inset Formula 
\begin{eqnarray*}
t_{\min}\left(T_{2}\left(T\left(h\right)\right),T\right) & = & 2t_{\min}\left(T_{2}\left(T\left(h\right)\right),T_{3}\right)+\left(n+1-s\right)
\end{eqnarray*}

\end_inset

ובשילוב עם 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:1"
plural "false"
caps "false"
noprefix "false"

\end_inset

 ו
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:2"
plural "false"
caps "false"
noprefix "false"

\end_inset

 נקבל:
\begin_inset Formula 
\begin{eqnarray*}
\left(2\left(r-1\right)+1+s\right)+t_{\min}\left(f,T\right) & = & 2\left(t_{\min}\left(f,T_{3}\right)+r\right)+\left(n+1-s\right)
\end{eqnarray*}

\end_inset


