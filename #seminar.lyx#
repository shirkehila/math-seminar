\begin_layout Lemma
\begin_inset CommandInset label
LatexCommand label
name "lem:יהי--כך"

\end_inset

יהי 
\begin_inset Formula $f\in\mathbb{F}_{2}\left[x\right]$
\end_inset

 כך ש
\begin_inset Formula $\deg\left(f\right)\ge1$
\end_inset

.
 קיים 
\begin_inset Formula $1\le m\le2\deg\left(f\right)+1$
\end_inset

 כך שמתקיים:
\begin_inset Formula 
\begin{eqnarray*}
\deg\left(T^{m}\left(f\right)\right) & = & \deg\left(f\right)-1
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Proof
נסמן 
\begin_inset Formula $d=\deg\left(f\right)$
\end_inset

.
 אם 
\begin_inset Formula $f$
\end_inset

 זוגי אז 
\begin_inset Formula $T\left(f\right)=\frac{f}{x}$
\end_inset

 ולכן,
\begin_inset Formula 
\[
\deg\left(T\left(f\right)\right)=d-1
\]

\end_inset

במקרה זה 
\begin_inset Formula $m=1$
\end_inset

 מקיים את הטענה.
\end_layout

\begin_layout Proof
אם 
\begin_inset Formula $f$
\end_inset

 אי זוגי, נרשום:
\begin_inset Formula 
\begin{eqnarray*}
f & = & x^{r}g+1
\end{eqnarray*}

\end_inset

כאשר 
\begin_inset Formula $1\le r\le d$
\end_inset

 החזקה המקסימלית של 
\begin_inset Formula $x$
\end_inset

 המחלקת את 
\begin_inset Formula $f-1$
\end_inset

, כלומר 
\begin_inset Formula $x\nmid g$
\end_inset

.
 כמו כן 
\begin_inset Formula $\deg g=d-r$
\end_inset

.
 נעיר כי 
\begin_inset Formula $r$
\end_inset

 הוא למעשה החזקה הנמוכה ביותר של 
\begin_inset Formula $x$
\end_inset

 המופיעה ב
\begin_inset Formula $f$
\end_inset

 פרט ל
\begin_inset Formula $1$
\end_inset

.
\end_layout

\begin_layout Proof
נוכיח באינדוקציה כי לכל 
\begin_inset Formula $1\le j\le r$
\end_inset

 מתקיים:
\begin_inset Formula 
\begin{eqnarray*}
T^{2j}\left(f\right) & = & \left(x+1\right)^{j}x^{r-j}g+1
\end{eqnarray*}

\end_inset

עבור 
\begin_inset Formula $j=1$
\end_inset

:
\begin_inset Formula 
\begin{eqnarray*}
T\left(f\right) & = & \left(x+1\right)\left(x^{r}g+1\right)+1=\left(x+1\right)x^{r}g+x\\
T^{2}\left(f\right) & = & \left(x+1\right)x^{r-1}g+1
\end{eqnarray*}

\end_inset

נניח כעת כי התוצאה נכונה עבור 
\begin_inset Formula $1\le j<r$
\end_inset

 ונוכיח שהיא נכונה עבור 
\begin_inset Formula $j+1$
\end_inset

.
 מהנחת האינדוקציה:
\begin_inset Formula 
\begin{eqnarray*}
T^{2j}\left(f\right) & = & \left(x+1\right)^{j}x^{r-j}g+1
\end{eqnarray*}

\end_inset

מכיוון ש
\begin_inset Formula $j<r$
\end_inset

, הפולינום 
\begin_inset Formula $\left(x+1\right)^{j}x^{r-j}g$
\end_inset

 זוגי ולכן 
\begin_inset Formula $T^{2j}\left(f\right)$
\end_inset

 אי זוגי.
\begin_inset Formula 
\begin{eqnarray*}
T^{2j+1}\left(f\right) & = & \left(x+1\right)^{j+1}\left(x^{r-j}g+1\right)+1=\left(x+1\right)^{j+1}x^{r-j}g+x\\
T^{2j+2}\left(f\right) & = & \left(x+1\right)^{j+1}x^{r-\left(j+1\right)}g+1
\end{eqnarray*}

\end_inset

ובכך הוכחנו את צעד האינדוקציה.
\end_layout

\begin_layout Proof
נקבל עבור 
\begin_inset Formula $j=r$
\end_inset

:
\begin_inset Formula 
\begin{eqnarray*}
T^{2r}\left(f\right) & = & \left(x+1\right)^{r}g+1
\end{eqnarray*}

\end_inset

נזכיר כי 
\begin_inset Formula $g$
\end_inset

 אי זוגי ולכן 
\begin_inset Formula $\left(x+1\right)^{r}g$
\end_inset

 אי זוגי.
 זה גורר ש
\begin_inset Formula $T^{2r}\left(f\right)$
\end_inset

 זוגי לכן:
\begin_inset Formula 
\begin{eqnarray*}
T^{2r+1}\left(f\right) & = & \frac{\left(x+1\right)^{r}g+1}{x}
\end{eqnarray*}

\end_inset

ומתקיים:
\begin_inset Formula 
\begin{eqnarray*}
\deg\left(T^{2r+1}\left(f\right)\right) & = & \deg\left(T^{2r}\left(f\right)\right)-1=d-1
\end{eqnarray*}

\end_inset

במקרה זה 
\begin_inset Formula $m=2r+1\le2d+1$
\end_inset

 מקיים את הטענה.
\end_layout

\begin_layout Standard
כעת נקל להוכיח באינדוקציה על מעלת הפולינום את החסם שתיארנו בהקדמה.
\end_layout

\begin_layout Theorem
יהי 
\begin_inset Formula $0\ne f\in\mathbb{F}_{2}\left[x\right]$
\end_inset

, אז 
\begin_inset Formula $t_{\min}\left(f,T\right)\le\deg\left(f\right)^{2}+2\deg\left(f\right)$
\end_inset

.
\end_layout

\begin_layout Proof
נוכיח את הטענה באינדוקציה על מעלת 
\begin_inset Formula $f$
\end_inset

.
\end_layout

\begin_layout Proof
בסיס האינדוקציה: 
\begin_inset Formula $\deg f=0$
\end_inset

.
 הפולינום היחיד ב
\begin_inset Formula $\mathbb{F}_{2}\left[x\right]$
\end_inset

 שמעלתו
